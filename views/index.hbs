<h1>Genres Information</h1>

{{!-- Form to add a record to the table  --}}
<form id="add-genre-form">
    <label for="input-genreName">Genre Name: </label>
    <input type="text" name="input-genreName" id="input-genreName">

    <select name="input-floorName" id="input-floorName">
        <option value="">Select a Floor</option>
        {{#each floors}}
        <option value="{{this.floorName}}">{{this.floorName}}</option>
        {{/each}}
    </select>


    <input type="submit">
</form>
{{!-- Create a table --}}
<table id="genre-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr >
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>Delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr data-value={{this.genreID}}>
            <td>{{this.genreID}}</td>
            <td>{{this.genreName}}</td>
            <td>{{this.floorName}}</td>
            <td><button onclick="deleteGenre({{this.genreID}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>

<h2>Updating a Genres Floor</h2>
<p>To update a specific genres floor. select their name from the drop-down menu on the left and their new floor on the right drop-down</p>
<form id="update-genre-form-ajax">

    <label for="input-genre">Genre: </label>
    <select name="input-genre" id="mySelect">
        <option value="test">Select a Genre</option>
        {{#each data}}
        <option value="{{this.genreID}}">{{this.genreName}}</option>
        {{/each}}
    </select>

    <label for="input-floor">Floor: </label>
    <select name="input-floor" id="input-floor-update">
        <option>Select a Floor</option>
        {{#each floors}}
        <option value="{{this.floorID}}">{{this.floorName}}</option>
        {{/each}}
    </select>
    <input type="submit">

</form>

