	<!-- Add form -->
    <title>Genres</title>
    <body>
	<h1>Book Genre Relationship Information</h1>

	<form id="add-form">
		<label for="bookName">Book Name:</label>
		<input type="text" id="bookName" name="bookName">
		<label for="gerneName">Genre Name:</label>
		<input type="text" id="gerneName" name="gerneName">
		<input type="submit" value="Add">
	</form>

	<!-- Table -->

{{!-- Create a table --}}
<table id="bookGenre-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr >
            <th>bookName</th>
			<th>genreName</th>
            <th>Delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr data-value={{this.bookID}}>
            <td>{{this.bookName}}</td>
            <td>{{this.genreName}}</td>
            <td><button onclick="deletebookGenre({{this.bookID}},{{this.genreID}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>



	<script>
// Function to delete a row from the table
function deleteRow(button) {
  // Traverse the DOM to get the table row element
  var row = button.parentNode.parentNode;
  // Remove the row from the table
  row.parentNode.removeChild(row);
}
      </script>

